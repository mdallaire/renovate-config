{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":disableRateLimiting",
    "docker:enableMajor",
    "docker:pinDigests",
    ":automergeDigest",
    ":enablePreCommit",
    "github>mdallaire/renovate-config:commit-message",
    "github>mdallaire/renovate-config:pr-labels",
    "github>mdallaire/renovate-config:semantic-commits",
    "github>mdallaire/renovate-config:generic-regex-manager"
  ],
  "onboarding": false,
  "requireConfig": "optional",
  "timezone": "America/Toronto",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "commitBodyTable": true,
  "rebaseWhen": "auto"
}
